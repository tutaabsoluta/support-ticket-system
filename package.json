{
  "name": "support-ticket-system",
  "version": "1.0.0",
  "description": "REST API with Express and TS",
  "main": "index.js",
  "scripts": {
    "test": "npm run prisma:migrate:test && jest",
    "test:watch": "npm run prisma:migrate:test && jest --watch",
    "test:coverage": "npm run prisma:migrate:test && jest --coverage",
    "dev": "tsnd --respawn --clear src/app.ts",
    "build": "rimraf ./dist && tsc",
    "start": "npm run build && node dist/app.js",
    "prisma:migrate:prod": "prisma migrate deploy",
    "prisma:migrate:test": "dotenv -e .env.test -- npx prisma migrate deploy"
  },
  "author": "Sergio Duran",
  "license": "ISC",
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.1",
    "dotenv-cli": "^8.0.0",
    "jest": "^29.7.0",
    "prisma": "^6.4.1",
    "rimraf": "^6.0.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.6",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@prisma/client": "^6.4.1",
    "@types/supertest": "^6.0.2",
    "compression": "^1.8.0",
    "dotenv": "^16.4.7",
    "env-var": "^7.5.0",
    "express": "^4.21.2"
  }
}
